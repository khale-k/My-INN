<% layout('/layouts/boilerplate') -%>
<script src="https://api.mapbox.com/mapbox-gl-js/v3.5.1/mapbox-gl.js"></script>

    <script>
        const maptoken="<%=process.env.MAP_TOKEN_API%>";
        const coordinates=<%-JSON.stringify(listing.geometry.coordinates)%>;
    </script>
<body>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3"> 
            <h4><%=listing.title%><br></h4>
        </div>
        <div class="col-6 offset-3">  
            <div class="card listing-card">
                <img class="card-img-top show-img" src="<%=listing.image.url%>" alt="Card image cap">
                <i>Ownes by <%=listing.owner.username%></i><br>
                <div class="card-body">
                    <p class="card-text">
                        <%=listing.description%><br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                        <%=listing.location%><br>
                        <%=listing.country%><br>
                    </p>
                    <br>
                    <div class="row ">
                        <form method="get" action="/listings/<%=listing._id%>/edit">
                            <button class="btn btn-dark add-btn offset-4">Edit</button>
                        </form>
                        <br>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button type="submit" class="btn btn-dark offset-6">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-3">
                <hr>
                <h4>Leave a Review: </h4>
                <form method="post" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
                    <div class="review">
                        <label for="rating" class="form-label">Rating</label>
                      <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    
                    </div>
                    <div>
                        <label for="comment" class="form-label">Comments:</label>
                        <textarea id="comment" name="review[comment]" cols="30" rows="8" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Please add Some Comments for Review!!
                        </div>
                    </div>
                    <button class="add-btn btn btn-dark mt-3">Submit</button>
                </form>
                <hr>
                <p><b>All Reviews</b></p>
                <p>
                    <div class="row">
                        <% for (let review of listing.reviews) { %> 
                            <div class="card col-5 ms-3 mb-3 s-margin">
                                <div class="card-body mb-3">
                                    <div class="card-title">
                                        <h5> <%=review.author.username%> </h5>
                                    </div>
                                    <div class="card-text">
                                        <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                        </p>
                                    </div>
                                    <div class="card-text">
                                        <%= review.comment %>
                                    </div>  
                                </div>
                                <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                    <button class="btn btn-dark btn-sm">Delete</button>
                                </form>
                            </div>
                        <% } %>
                    </div> 
                </p>
            </div>
        </div>
        <div class="col-6 offset-3">
            <div id="map"></div>
        </div>
    </div>
    <script src="/js/map.js"></script>
</body>
